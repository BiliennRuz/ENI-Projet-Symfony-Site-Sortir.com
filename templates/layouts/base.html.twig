<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

    <!-- Metro 4 -->
    <link rel="stylesheet" href="https://cdn.metroui.org.ua/v4/css/metro-all.min.css">
    <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
    <!-- Pour les animations -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <title>{% block title %} Sortir.com {% endblock %}</title>
</head>

<body>
    <div class="grid m-5 p-1">
        <div data-role="appbar" data-expand-point="md">
            <div class="row flex-align-center">
                <div class=" cell-3 text-left">
                    <img src="assets/img/logo.png" alt="logo sortir.com">
                </div>

                <div class="cell-9 text-right">

                    {# Création d'une variable sur twig #}
                    {% set menuNotConnected = ["Accueil"] %}
                    {% set menuConnected = ["Accueil","Mon profil","Se deconnecter"] %}
                    {% set menuAdminConnected = ["Villes", "Sites", "Accueil","Mon profil","Se deconnecter"] %}

                    {% if app.user %}
                    {% set menu = menuConnected %}
                    {% elseif is_granted("ROLE_ADMIN") %}
                    {% set menu = menuAdminConnected %}
                    {% else %}
                    {% set menu = menuNotConnected %}
                    {% endif %}

                    {# ajouté pour les test et à supprimer #}
                    {# {% set menu = ["Villes", "Sites", "Accueil","Mon profil","Se deconnecter"] %} #}

                    <ul class="app-bar-menu">

                        {# Début de la boucle #}
                        {% for ele in menu %}
                        <li>
                            {# affichage == Echo #}
                            {# concaténation tilde ~ #}
                            <a href=" {{ path('app_'~ele|lower|replace({' ':''})) }}">{{ele|upper}}</a>
                            {# <a href="#">{{ele|upper}}</a> #}
                        </li>
                        {% endfor %}
                        {# Fin de la boucle #}

                    </ul>
                </div>
            </div>
        </div>
    </div>

    <main>
        <div class="grid">
            <div class="row m-5">
                <div class="col-12 flex-align-center text-center ">


                    {% block body %}

                    {% endblock %}

                </div>
            </div>
        </div>

    </main>
    <script src="https://cdn.metroui.org.ua/v4/js/metro.min.js"></script>
    <!-- Pour les animations aos -->

    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>

<script>

    AOS.init();

</script>
</body>

</html>