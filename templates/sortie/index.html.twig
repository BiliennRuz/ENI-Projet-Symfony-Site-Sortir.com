{% extends 'layouts/base.html.twig' %}

{% block title %}Sorties index{% endblock %}
{% block javascript %}{% endblock %}

{% block body %}

    <h5 class="text-right">Date du jour : {{dateNow}}</h4>
    <h5 class="text-right">Participant : {{app.user.prenom}} {{app.user.nom}}</h4> 

    {{ include('sortie/_filter.html.twig') }}

    <table class="table striped table-border cell-border cell-center">
        <thead class="text-center">
            <tr>
                <th class="text-center">Nom</th>
                <th class="text-center">Date de d√©but</th>
                <th class="text-center">Date de cloture</th>
                <th class="text-center">Inscrits/Place</th>
                <th class="text-center">Etat</th>
                <th class="text-center">Inscrit</th>
                <th class="text-center">Organisateur</th>
                <th class="text-center">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sorty in sorties %}
            <tr>
                <td>{{ sorty.nom }}</td>
                <td>{{ sorty.datedebut ? sorty.datedebut|date('d/m/Y H:i') : '' }}</td>
                <td>{{ sorty.datecloture ? sorty.datecloture|date('d/m/Y H:i') : '' }}</td>
                <td>{{nbinscrits[loop.index0].0.count}}/{{ sorty.nbinscriptionsmax}}</td>
                <td>{{ sorty.etatsNoEtat }}</td>
                {% if testinscrits[loop.index0].0.count ==1 %}
                    <td>X</td>
                {% else %}
                    <td>&nbsp;</td>
                {% endif %}
                {# <td>{{testinscrits[loop.index0].0.count}}</td> #}
                <td><a href="{{ path('app_participants_show', {'pseudo': sorty.organisateur}) }}">{{ sorty.organisateur }}</a></td>
                {#  Test recuperation date actuelle {{ 'now'|date('Y-m-d H:i:s') }} #}
                <td align="left">
                    <a href="{{ path('app_sortie_show', {'noSortie': sorty.noSortie}) }}" class="action-button second link"  onmouseover="show2()" onmouseout="out()"><span class="mif-eye"></span></a>                   
                    {% if  app.user.pseudo == sorty.organisateur  %}
                        <a href="{{ path('app_sortie_edit', {'noSortie': sorty.noSortie}) }}" class="action-button second yellow"><span class="mif-pencil"></a>
                        <a href="{{ path('app_sortie_annuler', {'noSortie': sorty.noSortie}) }}" class="action-button second alert"><span class="mif-bin"></span></a>
                    {% endif %}

                    {% if  date() < date(sorty.datecloture) %}
                        {% if testinscrits[loop.index0].0.count ==1 %}
                                <a href="{{ path('app_sortie_deleteInscri',{'noSortie': sorty.noSortie}) }}">se desister</a>
                        {% else %}
                            {% if nbinscrits[loop.index0].0.count < sorty.nbinscriptionsmax %}
                                <a href="{{ path('app_sortie_addInscri',{'noSortie': sorty.noSortie}) }}">s'inscrire</a>
                            {% endif %}
                        {% endif %}
                    {% endif %}
                    {# <a href="{{ path('app_inscriptions_new') }}" class="action-button second success"><span class="mif-plus"></span></a> #}
                </td>
           
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_sortie_new') }}" class="action-button second success"  onmouseover="show3()" onmouseout="out2()"><span class="icon"><span class="mif-plus"></span></span></a>
    
    {# // <script src="{{ asset('assets/js/script.js') }}"></script> #}
{% endblock %}
