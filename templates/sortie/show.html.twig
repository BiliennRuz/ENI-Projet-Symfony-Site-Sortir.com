{% extends 'layouts/base.html.twig' %}

{% block title %}Afficher sorties{% endblock %}

{% block body %}
    
   
        <tbody>
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center">Afficher une sortie</h1>
                </div>
                <div class="card-content p-2 text-center">
                <table class="table">
                    
                    <tr>
                        <th>Nom de la sortie</th>
                        <td>{{ sorty.nom }}</td>
                    </tr>
                    <tr>
                        <th>Date et heure de la sortie</th>
                        <td>{{ sorty.datedebut ? sorty.datedebut|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                  
                    <tr>
                        <th>Date limite d'inscription</th>
                        <td>{{ sorty.datecloture ? sorty.datecloture|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    
                    <tr>
                        <th>Nbinscriptionsmax</th>
                        <td>{{ sorty.nbinscriptionsmax }}</td>
                    </tr>
                    <tr>
                        <th>Duree</th>
                        <td>{{ sorty.duree }}</td>
                    </tr>
                    <tr>
                        <th>Descriptions et infos</th>
                        <td>{{ sorty.descriptioninfos }}</td>
                    </tr>              
            </table>
        </div>
         <div class="card-footer text-center">
        
                    <a href="{{ path('app_sortie_index') }}">back to list</a>
         </div> 

         <div class="card">
          
            <div class="card-content p-2 text-center">
            
                <table class="table">
                <tr>
                    <th>Ville organisatrice</th>
                    <td></td>
                </tr>
                <tr>
                    <th>Lieu</th>
                    <td></td>
                </tr>
              
                <tr>
                    <th>Rue</th>
                    <td></td>
                </tr>
                
                <tr>
                    <th>Code postal</th>
                    <td></td>
                </tr>
                <tr>
                    <th>Latitude</th>
                    <td></td>
                </tr>
                <tr>
                    <th>Longitude</th>
                    <td></td>
                </tr>              
        </table>
    </div>
    <table class="table flex-align-center">
        <thead>
            <tr>
                <th>pseudo</th>
                <th>prenom</th>
                <th>nom</th>
            </tr>
        </thead>
        <tbody>
        {% for inscrits in inscrits %}
            <tr>
                <td>{{ inscrit.pseudo }}</td>
                <td>{{ inscrit.prenom }}</td>
                <td>{{ inscrit.nom }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
     
                     {#<a href="{{ path('app_sortie_edit', {'noSortie': sorty.noSortie}) }}">edit</a>
                
                    {{ include('sortie/_delete_form.html.twig') }}
                </div>#}
            </div>
            
        </tbody>
    

    
{% endblock %}
